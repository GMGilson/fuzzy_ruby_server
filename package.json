{
  "name": "fuzzy-ruby-server",
  "displayName": "Fuzzy Ruby Server",
  "description": "Performant Goto Definition and other LSP features",
  "author": "Joel Korpela",
  "publisher": "Blinknlights",
  "license": "MIT",
  "version": "0.5.0",
  "categories": [],
  "keywords": [
    "ruby",
    "language",
    "server",
    "goto",
    "definition"
  ],
  "engines": {
    "vscode": "^1.65.0"
  },
  "enabledApiProposals": [],
  "activationEvents": [
    "onLanguage:ruby"
  ],
  "main": "./client/out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ruby",
        "extensions": [
          ".rb"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "fuzzy-ruby-language-server",
      "properties": {
        "fuzzy-ruby-language-server.trace.server": {
          "type": "string",
          "scope": "window",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "enumDescriptions": [
            "No traces",
            "Error only",
            "Full log"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./client/src/extension.ts --bundle --outfile=./client/out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.12.0",
    "@types/vscode": "^1.44.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "cross-env": "^7.0.2",
    "electron-rebuild": "^1.11.0",
    "esbuild": "^0.15.9",
    "eslint": "^7.6.0",
    "glob": "^7.1.7",
    "mocha": "^8.0.1",
    "ts-loader": "^8.0.12",
    "typescript": "^4.4.3",
    "vscode-test": "^1.4.0",
    "vscode-uri": "^3.0.2"
  }
}
